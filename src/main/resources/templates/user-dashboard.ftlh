<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>BookSwap Hub - Sign In / Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f1f3f5;
            font-family: 'Raleway', sans-serif;
        }
        .form-box {
            max-width: 450px;
            margin: 4em auto;
            padding: 2em;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        h2 {
            font-weight: bold;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="form-box">
        <h2 class="mb-4 text-center">Welcome to BookSwap Hub</h2>

        <!-- Sign In Form -->
        <form action="/login" method="post" class="mb-4">
            <h5>Sign In</h5>
            <div class="mb-3">
                <label for="signinEmail" class="form-label">Email</label>
                <input type="email" name="email" id="signinEmail" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="signinPassword" class="form-label">Password</label>
                <input type="password" name="password" id="signinPassword" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-dark w-100">Sign In</button>
        </form>

        <!-- Divider -->
        <hr>

        <!-- Create Account Form -->
        <form action="/register" method="post">
            <h5>Create Account</h5>
            <div class="mb-3">
                <label for="regUsername" class="form-label">Username</label>
                <input type="text" name="username" id="regUsername" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="regName" class="form-label">Full Name</label>
                <input type="text" name="name" id="regName" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="regEmail" class="form-label">Email</label>
                <input type="email" name="email" id="regEmail" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="regPassword" class="form-label">Password</label>
                <input type="password" name="password" id="regPassword" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Create Account</button>
        </form>
    </div>
</div>

</body>
</html>